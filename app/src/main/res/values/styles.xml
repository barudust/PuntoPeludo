<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/azul_oscuro</item>
        <item name="hintTextColor">@color/azul_medio</item>
    </style>

    <!-- Estilo base para las tarjetas del Dashboard -->
    <style name="DashboardCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="cardBackgroundColor">#662C3E50</item>
    </style>

    <!-- Estilo para el contenedor del contenido de la tarjeta -->
    <style name="DashboardCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>

    </style>

    <!-- Estilo para el icono de la tarjeta -->
    <style name="DashboardCardIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Estilo para el texto de la tarjeta -->
    <style name="DashboardCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>




</resources>