<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".DashboardActivity">

    <!-- 1. ENCABEZADO DE USUARIO E INFORMACIÃ“N -->

    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvSucursalInfo"
        app:layout_constraintEnd_toStartOf="@+id/btnCerrarSesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Â¡Bienvenido!" />

    <TextView
        android:id="@+id/tvSucursalInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ðŸ“ Sucursal Centro"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/cardNuevaVenta"
        app:layout_constraintEnd_toEndOf="@id/tvUserInfo"
        app:layout_constraintStart_toStartOf="@id/tvUserInfo"
        app:layout_constraintTop_toBottomOf="@id/tvUserInfo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCerrarSesion"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:contentDescription="Cerrar SesiÃ³n"
        app:backgroundTint="#88547792"
        app:icon="@drawable/off_on_power"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvUserInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvUserInfo" />


    <!-- 2. BOTÃ“N PRINCIPAL DE ACCIÃ“N: NUEVA VENTA -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardNuevaVenta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/azul_medio"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gridContainer"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSucursalInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/shopping_cart_svgrepo_com"
                app:tint="@color/white"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nueva Venta"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 3. CUADRÃCULA DE OPCIONES SECUNDARIAS -->

    <ScrollView
        android:id="@+id/gridContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cardNuevaVenta"
        app:layout_constraintStart_toStartOf="@id/cardNuevaVenta"
        app:layout_constraintTop_toBottomOf="@id/cardNuevaVenta">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true">

            <!-- Fila 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInventario"
                style="@style/DashboardCardStyle"
                android:layout_width="134dp">

                <LinearLayout
                    style="@style/DashboardCardContent"
                    android:layout_width="179dp">

                    <ImageView
                        style="@style/DashboardCardIcon"
                        android:src="@drawable/box_open_2_svgrepo_com" />

                    <TextView
                        style="@style/DashboardCardText"
                        android:text="Inventario" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSurtir"
                style="@style/DashboardCardStyle">

                <LinearLayout style="@style/DashboardCardContent">

                    <ImageView
                        style="@style/DashboardCardIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/car_delivery" />

                    <TextView
                        style="@style/DashboardCardText"
                        android:text="Surtir" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Fila 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCaja"
                style="@style/DashboardCardStyle">

                <LinearLayout style="@style/DashboardCardContent">

                    <ImageView
                        style="@style/DashboardCardIcon"
                        android:src="@drawable/money_bag_svgrepo_com" />

                    <TextView
                        style="@style/DashboardCardText"
                        android:text="Caja" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCrearProducto"
                style="@style/DashboardCardStyle">

                <LinearLayout style="@style/DashboardCardContent">

                    <ImageView
                        style="@style/DashboardCardIcon"
                        android:src="@drawable/add_svgrepo_com" />

                    <TextView
                        style="@style/DashboardCardText"
                        android:text="Crear Producto" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Fila 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardClientes"
                style="@style/DashboardCardStyle">

                <LinearLayout style="@style/DashboardCardContent">

                    <ImageView
                        style="@style/DashboardCardIcon"
                        android:src="@drawable/user_pen_svgrepo_com" />

                    <TextView
                        style="@style/DashboardCardText"
                        android:text="Clientes" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReportes"
                style="@style/DashboardCardStyle">

                <LinearLayout style="@style/DashboardCardContent">

                    <ImageView
                        style="@style/DashboardCardIcon"
                        android:src="@drawable/paper_svgrepo_com" />

                    <TextView
                        style="@style/DashboardCardText"
                        android:text="Reportes" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

